" ===============  Plugins  ===============
set runtimepath+=~/vimperator-plugins

" ===============  General  ===============
" Hides Firefox navigation bar (address, serach, etc)
set gui=nonavigation
set titlestring="Mozilla Firefox"

"  set editor
set editor=/usr/local/bin/mvim
" fix
"if has("win32")
